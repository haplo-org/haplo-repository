std:plugin:resources("filter.js")

<h2> "Filter results by" </h2>
<form method="GET">
  each(filterData) {
    <h3> title </h3>
    if(isDropdownSelection) {
      <select name=parameter>
        <option value=""> "---" </option>
        each(options) {
          <option value=yearStr selected=if(selected) { "selected" }> yearStr </option>
        }
      </select>
    } else {
      each(objs) {
        <label>
          <input type="checkbox" name=concat(parameter "[" ref "]") value="1" checked=if(checked) { "true" }>
          title
        </label>
        <br>
      }
    }
  }
</form>

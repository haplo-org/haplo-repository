<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title> if(title) { title } else { "Example Repository" } </title>

    <meta name="description" content="Example Repository Publisher">

    std:web-publisher:platform-style-tag()
    <link href=url(staticDirectoryUrl "/bootstrap-lumen.css") rel="stylesheet">
    <link href=url(staticDirectoryUrl "/haplo-repository.css") rel="stylesheet">

</head>
<body>

    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <nav class="navbar navbar-inverse" role="navigation">
                    <div class="navbar-header">
                     
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                            <span class="sr-only"> "Toggle navigation" </span><span class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar"></span>
                        </button> <a class="navbar-brand" href="/repository"> "Example Repository" </a>
                    </div>
                
                    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                        <ul class="nav navbar-nav">
                            <li>
                                <a href="/staff"> "People" </a>
                            </li>
                            <li>
                                <a href="/outputs/"> "Browse" </a>
                            </li>
                        </ul>
                        <form class="navbar-form navbar-right" role="search" method="GET" action="/repository/search">
                            <div class="form-group">
                                <input type="text" class="form-control" name="q">
                            </div>
                            " "
                            <button type="submit" class="btn btn-default">
                                "Search"
                            </button>
                        </form>
                    </div>
                
                </nav>
                <div class="row">
                    <div class="col-md-8">
                        <div class="well">
                            yield()
                        </div>
                        yield:below()
                    </div>
                    <div class="col-md-4">
                        yield:right()
                    </div>
                </div>
            </div>
        </div>
    </div>

    <footer class="footer">
      <div class="container">
        <div class="row">
          <div class="col-xs-6">
            <p><a href="/repository">"Example repository"</a></p>
          </div>
          <div class="col-xs-6 text-right">
            <p>"Made with "<a href="https://haplo.org">"Haplo"</a>"."</p>
          </div>
        </div>
      </div>
    </footer>

    scriptTag(staticDirectoryUrl "/jquery.js")
    scriptTag(staticDirectoryUrl "/bootstrap.js")
</body>
</html>